<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- السمة الأساسية للتطبيق - الوضع الداكن -->
    <style name="Theme.ThothWisdom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ألوان أساسية -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- ألوان ثانوية -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- ألوان الخلفية -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- ألوان الحالة -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- شريط الحالة وشريط التنقل -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        
        <!-- تأثير النقر -->
        <item name="colorControlHighlight">@color/ripple</item>
        
        <!-- الخط الافتراضي -->
        <item name="android:fontFamily">@font/noto_naskh_arabic</item>
        <item name="fontFamily">@font/noto_naskh_arabic</item>
        
        <!-- تعطيل الانتقالات الافتراضية -->
        <item name="android:windowActivityTransitions">true</item>
        
        <!-- دعم RTL -->
        <item name="android:layoutDirection">rtl</item>
    </style>
    
    <!-- سمة شاشة البداية -->
    <style name="SplashTheme" parent="Theme.ThothWisdom">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- أنماط النصوص -->
    <style name="TextAppearance.ThothWisdom.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/noto_kufi_arabic</item>
        <item name="android:fontFamily">@font/noto_kufi_arabic</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="TextAppearance.ThothWisdom.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/noto_kufi_arabic</item>
        <item name="android:fontFamily">@font/noto_kufi_arabic</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="TextAppearance.ThothWisdom.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/noto_kufi_arabic</item>
        <item name="android:fontFamily">@font/noto_kufi_arabic</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="TextAppearance.ThothWisdom.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/noto_naskh_arabic</item>
        <item name="android:fontFamily">@font/noto_naskh_arabic</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.ThothWisdom.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/noto_naskh_arabic</item>
        <item name="android:fontFamily">@font/noto_naskh_arabic</item>
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.ThothWisdom.Quote" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/noto_nastaliq_urdu</item>
        <item name="android:fontFamily">@font/noto_nastaliq_urdu</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- أنماط الأزرار -->
    <style name="Widget.ThothWisdom.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.ThothWisdom.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.ThothWisdom.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/secondary</item>
    </style>
    
    <!-- أنماط حقول الإدخال -->
    <style name="Widget.ThothWisdom.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="android:textColorHint">@color/on_background</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>
    
    <!-- أنماط البطاقات -->
    <style name="Widget.ThothWisdom.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>
